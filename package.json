{
	"name": "make-runner",
	"displayName": "Make Runner",
	"description": "Run Make file easily",
	"publisher": "rajiv-sah",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:make-runner.runIt",
		"onCommand:make-runner.copyIt"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "make-runner.runIt",
				"title": "Make It"
			},
			{
				"command": "make-runner.copyIt",
				"title": "Copy It"
			}
		],
		"keybindings": [
			{
				"command": "make-runner.runIt",
				"key": "ctrl+shift+enter",
				"mac": "cmd+shift+enter"
			},
			{
				"command": "make-runner.copyIt",
				"key": "ctrl+shift+c",
				"mac": "cmd+shift+c"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.48.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"copy-paste": "^1.3.0"
	}
}
